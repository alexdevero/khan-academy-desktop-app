{
  "name": "khan-academy-desktop-app",
  "version": "0.0.1",
  "description": "A simple Khan Academy desktop app build with electron.",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/alexdevero/khan-academy-desktop-app.git"
  },
  "homepage": "https://github.com/alexdevero/khan-academy-desktop-app#readme",
  "bugs": {
    "url": "https://github.com/alexdevero/khan-academy-desktop-app/issues"
  },
  "author": {
    "name": "Alex Devero",
    "email": "deveroalex@gmail.com",
    "url": "https://alexdevero.com/"
  },
  "contributors": [
    {
      "name": "",
      "email": "",
      "url": ""
    }
  ],
  "keywords": [
    "app",
    "application",
    "desktop",
    "desktop-app",
    "desktop-application",
    "education",
    "electron",
    "electron-app",
    "javascript",
    "khan",
    "khan-academy",
    "learning"
  ],
  "engines": {
    "node": ">=9.x",
    "npm": ">=5.x",
    "yarn": ">=1.x.x"
  },
  "main": "app.js",
  "scripts": {
    "package:linux": "cross-env NODE_ENV=prod electron-packager ./ --out=./builds --overwrite --platform=linux --icon=assets/khan-academy-logo-leaf",
    "package:macappstore": "cross-env NODE_ENV=prod electron-packager ./ --out=./builds --overwrite --platform=mas --icon=assets/khan-academy-logo-leaf",
    "package:osx": "cross-env NODE_ENV=prod electron-packager ./ --out=./builds --overwrite --platform=darwin --icon=assets/khan-academy-logo-leaf",
    "package:win": "cross-env NODE_ENV=prod electron-packager ./ --out=./builds --overwrite --platform=win32 --icon=assets/khan-academy-logo-leaf",
    "package:all": "cross-env NODE_ENV=prod electron-packager ./ --out=./builds --overwrite --platform=all --icon=assets/khan-academy-logo-leaf",
    "start": "cross-env NODE_ENV=dev electron app.js"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "electron": "^1.8.4",
    "electron-packager": "^12.0.1"
  }
}
